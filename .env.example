# Environment Variables Template
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=sqlite:///./portfolio.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@host:port/dbname

# JWT Authentication
SECRET_KEY=your-secret-key-change-this-in-production-use-long-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Admin Credentials (Change these!)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme123

# AI Configuration
AI_MODEL_NAME=all-MiniLM-L6-v2
VECTOR_STORE_PATH=./data/vector_store
USE_OPENAI=false
# OPENAI_API_KEY=sk-your-key-here

# Voice (Optional)
USE_EXTERNAL_VOICE=false
# GOOGLE_CLOUD_API_KEY=your-key-here

# GitHub Fallback
GITHUB_REPO_URL=https://github.com/yourusername/portfolio

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=true
